# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Option 1: PostgreSQL Connection String (Recommended for production)
# Format: postgresql://username:password@host:port/database
POSTGRES_CONNECTION_STRING=postgresql://your_username:your_password@your_host:5432/your_database

# Option 2: Individual Database Parameters (Alternative to connection string)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=digital_twin
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================================================
# UPSTASH VECTOR DATABASE CONFIGURATION
# =============================================================================

# Get these from your Upstash Vector dashboard
UPSTASH_VECTOR_REST_URL=https://your-vector-url.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your_vector_token_here

# =============================================================================
# GROQ API CONFIGURATION
# =============================================================================

# Get your API key from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# ADDITIONAL CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Batch size for processing (recommended: 10-50)
BATCH_SIZE=10

# Embedding dimensions (Upstash default: 1024)
EMBEDDING_DIMENSIONS=1024

# Maximum retries for failed operations
MAX_RETRIES=3

# Database connection pool settings
DB_POOL_MIN=1
DB_POOL_MAX=10